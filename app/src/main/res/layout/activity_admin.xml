<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B030B"
    android:padding="16dp"
    tools:context=".AdminActivity">

    <TextView
        android:id="@+id/textHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rendR"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Screen"
        android:textColor="#FFB0B0"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textHeader" />

    <EditText
        android:id="@+id/searchBarName"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:inputType="textAutoComplete"
        android:hint="Enter Name of User/Movie"
        android:textColorHint="@color/black"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSubHeader"
        />


    <Button
        android:id="@+id/addUser"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        android:text="Add User"
        android:textColor="@color/black"
        android:backgroundTint="@color/material_dynamic_secondary80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchBarName"
        />


    <Button
        android:id="@+id/addAdmin"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:text="Add Admin"
        android:textColor="@color/black"
        android:backgroundTint="@color/material_dynamic_secondary80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addUser"
        />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:text="Logout"
        android:textColor="@color/black"
        android:backgroundTint="@color/material_dynamic_secondary80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchBarName"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

